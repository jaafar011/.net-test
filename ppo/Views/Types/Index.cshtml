@model List<DAL.Entity.Typess>

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Liste des Types</h1>
    </div>

    <div>
        <a asp-controller="Types" asp-action="Create" class="btn btn-success m-1">Créer une catégorie</a>
    </div>

    @if (Model.Count == 0 || Model==null)
    {
        <div class="text-center">
            <p>Aucun Type n'a été trouvé.</p>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>N° Types</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var types in Model)
                {
                    <tr>
                        <td>@types.Id</td>
                        <td>@types.Nom</td>
                        <td class="text-center align-middle">
                            <div>

                                <a asp-controller="Types" asp-action="Update" asp-route-id="@types.Id" class="btn btn-primary m-1">Modifier</a>
                                <a asp-controller="Types" asp-action="Delete" asp-route-id="@types.Id" class="btn btn-danger m-1">Supprimer</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
