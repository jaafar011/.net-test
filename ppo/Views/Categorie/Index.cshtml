@model List<DAL.Entity.Categorie>

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Liste des catégories</h1>
    </div>

    <div>
        <a asp-controller="Categorie" asp-action="Create" class="btn btn-success m-1">Créer une catégorie</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center">
            <p>Aucune catégorie n'a été trouvée.</p>
        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>N° Catégorie</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categorie in Model)
                {
                    <tr>
                        <td>@categorie.Id</td>
                        <td>@categorie.Nom</td>
                        <td class="text-center align-middle">
                            <div>
                                <a asp-controller="Categorie" asp-action="Update" asp-route-id="@categorie.Id" class="btn btn-primary m-1">Modifier</a>
                                <a asp-controller="Categorie" asp-action="Delete" asp-route-id="@categorie.Id" class="btn btn-danger m-1">Supprimer</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
