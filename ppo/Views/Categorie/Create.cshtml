@model DAL.Entity.Categorie

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Ajouter Nouvelle Catégorie</h5>
        <form method="post" asp-action="Create" asp-controller="Categorie">
            <div class="mb-3">
                <label class="form-label">Nom :</label>
                <input type="text" asp-for="Nom" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-success">Ajouter Catégorie</button>
        </form>
    </div>
</div>
